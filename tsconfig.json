{
	"include": [
		".bin/**/*"
	],
	"exclude": [
		"node_modules/**/*",
		"test/**/*"
	],
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"allowJs": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "nodenext",
    "noEmit": true,
		"noEmitOnError": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitAny": true,
		"noImplicitReturns": true
	}
}
